<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HitmeMainActivityFragment"
    android:id="@+id/relativeLayout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/background"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/intro"
        android:scaleType="fitXY"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sacco"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sacco_attesa" />

    <TextView
        android:text=""
        android:id="@+id/bestscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="80dp"
        android:textColor="#cccccc"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hit me"
        android:id="@+id/centerText"
        android:layout_below="@+id/bestscore"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:textSize="120dp"
        android:gravity="center_horizontal"
        android:textColor="#cccccc"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginBottom="46dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:id="@+id/language1"
            android:layout_weight="0.25"
            android:src="@android:drawable/ic_media_previous"
            android:scaleType="fitXY" />

        <ImageButton
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:id="@+id/language2"
            android:layout_weight="0.25"
            android:src="@android:drawable/ic_menu_upload_you_tube"
            android:scaleType="fitXY" />

        <ImageButton
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:id="@+id/language3"
            android:layout_weight="0.25"
            android:src="@android:drawable/ic_menu_more"
            android:scaleType="fitXY" />


        <ImageButton
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:id="@+id/language4"
            android:layout_weight="0.25"
            android:src="@android:drawable/ic_media_next"
            android:scaleType="fitXY" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/timeTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textSize="80dp"
        android:textColor="#cccccc"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arrowLeft"
        android:src="@drawable/arrow_left"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arrowRight"
        android:src="@drawable/arrow_right"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arrowDown"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/arrow_down" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arrowUp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/arrow_up" />




</RelativeLayout>
